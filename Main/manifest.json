{
    "manifest_version": 3,
    "name": "Virtual Mouse Simulator",
    "version": "1.0",
    "description": "Simulates human-like mouse movements to obfuscate tracking.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  